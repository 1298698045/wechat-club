.wrapper .banner {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.wrapper .banner .swiper {
  width: 100%;
  height: 100%;
}
.wrapper .banner .swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.wrapper .banner .swiper .swiper-item .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.wrapper .banner .custom-dots {
  position: absolute;
  bottom: 120rpx;
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrapper .banner .custom-dots .dot {
  width: 50rpx;
  height: 10rpx;
  margin: 0 5rpx;
  border-radius: 10px;
  background-color: rgba(255, 255, 255, 0.5);
  transition: background-color 0.3s ease;
}
.wrapper .banner .custom-dots .dot.active {
  background-color: #fff;
}
.wrapper .container {
  position: absolute;
  width: 95%;
  left: 50%;
  transform: translateX(-50%);
  top: 300rpx;
}
.wrapper .clubInfo {
  background: #FFFFFF;
  border-radius: 20rpx;
}
.wrapper .clubInfo .club-desc {
  padding: 10px;
  font-size: 14px;
  color: #484848;
}
.wrapper .menu-wrap {
  height: 100px;
  background: #fff;
  border-radius: 10px;
  margin: 10px 0;
  display: flex;
  flex-wrap: wrap;
}
.wrapper .menu-wrap .menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wrapper .menu-wrap .menu-item .menu-item-icon {
  width: 45px;
  height: 45px;
  line-height: 45px;
  background: #f1f1f1;
  border-radius: 40%;
  text-align: center;
}
.wrapper .menu-wrap .menu-item .menu-item-name {
  margin-top: 10px;
  font-size: 14px;
  color: #3d3d3d;
}
.btn {
  width: 130rpx;
  height: 60rpx;
  background: pink;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  border-radius: 30rpx;
  font-size: 16px;
  margin: 0;
  padding: 0;
  background: #6be8f5;
  font-weight: 700;
  outline: none;
  border: none;
}
.btn::after, .btn::before {
  content: "";
  display: none;
}
.tabContainer {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.tabContainer .tabs {
  display: flex;
}
.tabContainer .tabs .tab {
  margin-right: 50px;
  color: #878787;
  font-size: 16px;
  position: relative;
}
.tabContainer .tabs .tab.active {
  color: #333;
  font-weight: 700;
}
.tabContainer .tabs .tab.active::after {
  position: absolute;
  content: "";
  display: inline-block;
  width: 100%;
  height: 10px;
  background: #6be8f5;
  bottom: -1px;
  z-index: -1;
}
.tabContainer .tabs .tab:last-child {
  margin-right: 0;
}