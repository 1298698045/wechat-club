.wrapper .banner {
  width: 100%;
  height: 260px;
  position: relative;
}
.wrapper .banner .swiper {
  width: 100%;
  height: 100%;
}
.wrapper .banner .swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.wrapper .banner .swiper .swiper-item .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.wrapper .banner .custom-dots {
  position: absolute;
  bottom: 140rpx;
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrapper .banner .custom-dots .dot {
  width: 50rpx;
  height: 10rpx;
  margin: 0 5rpx;
  border-radius: 10px;
  background-color: rgba(255, 255, 255, 0.5);
  transition: background-color 0.3s ease;
}
.wrapper .banner .custom-dots .dot.active {
  background-color: #fff;
}
.wrapper .container {
  position: absolute;
  width: 95%;
  left: 50%;
  transform: translateX(-50%);
  top: 230px;
}
.wrapper .clubInfo {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding-top: 50px;
  padding-bottom: 15px;
  position: relative;
  border-top-left-radius: 0;
}
.wrapper .clubInfo .header {
  width: 130px;
  height: 80px;
  position: absolute;
  bottom: 80%;
  left: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 9;
}
.wrapper .clubInfo .header .logo {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin-left: 15px;
  margin-top: -15px;
  background: #fff;
  padding: 5px;
}
.wrapper .clubInfo .header .logo .logoImg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.wrapper .clubInfo .peopleBox {
  position: absolute;
  bottom: 95%;
  left: 130px;
  width: calc(100% - 130px);
  height: 40px;
  background: #6be8f5;
  border-top-right-radius: 20rpx;
  color: #333;
  z-index: 1;
}
.wrapper .clubInfo .peopleBox .peopleHead {
  line-height: 40px;
  padding-left: 10px;
  color: #333;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 10px;
}
.wrapper .clubInfo .peopleBox .avatarList {
  display: flex;
  align-items: center;
  gap: -8px;
}
.wrapper .clubInfo .peopleBox .avatarList .avatarItem {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: #e2e3e5;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);
  margin-left: -5px;
}
.wrapper .clubInfo .clubInfo-detail {
  padding: 0 15px;
}
.wrapper .clubInfo .clubInfo-detail .title {
  padding-bottom: 10px;
}
.wrapper .clubInfo .club-desc {
  font-size: 14px;
  color: #484848;
}
.wrapper .menu-wrap {
  height: 100px;
  background: #fff;
  border-radius: 10px;
  margin: 10px 0;
  display: flex;
  flex-wrap: wrap;
}
.wrapper .menu-wrap .menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wrapper .menu-wrap .menu-item .menu-item-icon {
  width: 45px;
  height: 45px;
  line-height: 45px;
  background: #f1f1f1;
  border-radius: 40%;
  text-align: center;
}
.wrapper .menu-wrap .menu-item .menu-item-name {
  margin-top: 10px;
  font-size: 14px;
  color: #3d3d3d;
}
.btn {
  width: 130rpx;
  height: 60rpx;
  background: pink;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  border-radius: 30rpx;
  font-size: 16px;
  margin: 0;
  padding: 0;
  background: #6be8f5;
  font-weight: 700;
  outline: none;
  border: none;
}
.btn::after, .btn::before {
  content: "";
  display: none;
}